@inherits BackgroundComponentBase

<ul class="@CssClasses" style="@CssStyles" @attributes="AdditionalAttributes">
    @NavigationItems
</ul>

@code {

    /// <summary>
    /// Navigation Items.
    /// </summary>
    [Parameter]
    public RenderFragment NavigationItems { get; set; }

    /// <summary>
    /// Whether the navigation bar orientation is vertical.
    /// </summary>
    [Parameter]
    public bool IsVertical { get; set; }

    /// <inheritdoc/>
    protected override string ComponentName => "nav";

    /// <summary>
    /// BuildStyles css for navigation list.
    /// </summary>
    protected override CssClassBuilder CssBuilder => base.CssBuilder.WithClass("flex-column", IsVertical);
}