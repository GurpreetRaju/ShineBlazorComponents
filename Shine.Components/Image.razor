@inherits ShineComponentBase

<img src="@Source" alt="@Alt" class="@CssClasses" style="@CssStyles" @attributes="@AdditionalAttributes" />

@code {

    /// <summary>
    /// Image source.
    /// </summary>
    [Parameter]
    public string Source { get; set; }

    /// <summary>
    /// Alt text.
    /// </summary>
    [Parameter]
    public string Alt { get; set; }

    /// <summary>
    /// Responsive.
    /// </summary>
    [Parameter]
    public bool Responsive { get; set; }

    /// <summary>
    /// Thumbnail.
    /// </summary>
    [Parameter]
    public bool Thumbnail { get; set; }

    /// <inheritdoc/>
    protected override string ComponentName => "img";

    /// <inheritdoc/>
    protected override CssClassBuilder CssBuilder => base.CssBuilder.WithClass("img-fluid", Responsive).WithClass("img-thumbnail", Thumbnail);
}