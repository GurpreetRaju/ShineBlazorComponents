@inherits LayoutComponentBase

<Shine.Components.Theme.ThemeProvider />
<ToastProvider />

<div class="layout-wrapper">
    <AppBar BackgroundColor="Base.Color.Primary">
        <BrandContent>
            <Text Transform="Base.Transform.Uppercase" class="text-white">Shine</Text>
        </BrandContent>
    </AppBar>
    <div class="page-wrapper">
        <Drawer BackgroundColor="Base.Color.Light" Width="20rem">
            <Navigation />
        </Drawer>
        <div class="flex-grow-1">
            @Body
        </div>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
